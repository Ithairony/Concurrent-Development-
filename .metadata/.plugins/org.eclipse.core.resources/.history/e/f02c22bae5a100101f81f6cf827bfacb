package griffith;

//Question 2
//Write a thread that continuously prints a message every 100 milliseconds while it is still
//alive. It can be terminated at any time by a control program

public class AliveThread extends Thread{
	
	// Declaring variables 
	private String message;
	
	// Constructor
    AliveThread(String message) {
        this.message = message;
    }
    
    @Override
    public void run() {
    	
    	while (!Thread.currentThread().isInterrupted()) {    		
    		try {
    			System.out.println(message);
				Thread.sleep(100); // Puts the thread to sleep for 100 milliseconds
			} catch (InterruptedException e) {
				
				Thread.currentThread().interrupt();
			}
    	}
    	System.out.println("Thread finished!");
    }
	public static void main(String[] args) {
		
		AliveThread threadOne = new AliveThread("Still Alive");
		threadOne.start();
		
		 try {
	            Thread.sleep(2000); // deixa a thread rodar 2 segundos
	        } catch (InterruptedException e) {
	            e.printStackTrace();
	        }

	        // Interrompe a thread
	        threadOne.interrupt();
	}

}
